<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/beige</item>
        <item name="colorPrimaryVariant">@color/beige</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_600</item>
        <item name="colorSecondaryVariant">@color/blue_grey</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_grey</item>
    </style>
    <style name="Switch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color -->
        <item name="colorControlActivated">@color/red_600</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/beige</item>
    </style>

    <style name="ThemeBase" parent="Theme.MyApplication">
        <item name="android:textColor">@color/black</item>
        <item name="background">@color/white</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>
    <style name="TextInputTheme" parent="Theme.MyApplication">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/beige</item>
    </style>
    <style name="SignInTheme" parent="Theme.MyApplication">
        <item name="backgroundTint">@color/blue_grey</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/black_dt</item>
        <item name="android:shadowRadius">15</item>
    </style>
    <style name="ButtonTheme" parent="Theme.MyApplication">
        <item name="backgroundTint">@color/blue_grey </item>
    </style>
    <style name="LoginPictureTheme" parent="Theme.MyApplication">
        <item name="android:src">@drawable/ic_clock_lt</item>
    </style>
    <style name="StatisticsIconTheme" parent="Theme.MyApplication">
        <item name="android:src">@drawable/ic_statistics_lt</item>
    </style>
    <style name="RedDetails" parent="Theme.MyApplication">
        <item name="android:textColor">@color/red_600</item>
        <item name="backgroundTint">@color/red_600</item>
    </style>
    <style name="ItemTaskTheme" parent="Theme.MyApplication">
        <item name="cardBackgroundColor">@color/light_grey</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SettingsBackground1" parent="Theme.MyApplication">
        <item name="android:src">@drawable/settings_background3</item>
    </style>
    <style name="SettingsBackground2" parent="Theme.MyApplication">
        <item name="android:src">@drawable/settings_background4</item>
    </style>
    <style name="NotificationIconTheme" parent="Theme.MyApplication">
        <item name="android:src">@drawable/ic_notification_lt</item>
    </style>
    <style name="PersonIconTheme" parent="Theme.MyApplication">
        <item name="android:src">@drawable/ic_person_lt</item>
    </style>
    <style name="ModeIconTheme" parent="Theme.MyApplication">
        <item name="android:src">@drawable/ic_mode_lt</item>
    </style>
</resources>
